<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/nfc_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/activation_title" />

        <ListPreference
